{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@validations/*": ["validations/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
